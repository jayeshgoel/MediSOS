<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Button solid color (red) -->
    <solid android:color="#FF3B30" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#FF0000" />

    <!-- Padding inside the button -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <!-- Size -->
    <size
        android:width="60dp"
        android:height="60dp" />
</shape>
